<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.notoldmcdonaldsfarm">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textSize="26dp"
            android:id="@+id/AnimalName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Duck"
            android:padding="5dp"
            android:onClick="playPro"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="40pt"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:text="Weight:"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/AnimalWeight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="6.6 pounds"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="40pt"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:text="Lifespan:"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/AnimalLifespan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="10 years"
            android:padding="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Touch the Duck!"
        android:layout_gravity="center"
        android:textSize="30dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/AnimalImage"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/duck"
        android:onClick="playSound"/>
</LinearLayout>
